<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".activities.DisplayCandidateActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tbSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            app:title="Candidate Results"
            app:titleTextColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/txtCandidateNameTitle"
            style="@style/CandidateTitleStyle"
            android:text="Name" />

        <TextView
            android:id="@+id/txtCandidateDisplayName"
            style="@style/CandidateValueStyle"
            android:text="txt" />

        <TextView
            android:id="@+id/txtCandidateEmailTitle"
            style="@style/CandidateTitleStyle"
            android:text="Email" />

        <TextView
            android:id="@+id/txtCandidateDisplayEmail"
            style="@style/CandidateValueStyle"
            android:text="txt" />

        <TextView
            android:id="@+id/txtCandidatePhoneTitle"
            style="@style/CandidateTitleStyle"
            android:text="Phone" />

        <TextView
            android:id="@+id/txtCandidatePhoneNumber"
            style="@style/CandidateValueStyle"
            android:text="txt" />

        <TextView
            android:id="@+id/txtCandidateResultTitle"
            style="@style/CandidateTitleStyle"
            android:text="Results" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtCorrectResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Correct: "
                android:textColor="@color/circleGreen"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtWrongResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Wrong: "
                android:textColor="@color/circleRed"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtUnAnsweredResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="UnAnswered: "
                android:textColor="@color/circleYellow"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtResultQuestion1"
                style="@style/QuestionLabelStyle"
                android:text="1"

                />

            <TextView
                android:id="@+id/txtResultQuestion2"
                style="@style/QuestionLabelStyle"
                android:layout_marginLeft="2dp"
                android:text="2" />

            <TextView
                android:id="@+id/txtResultQuestion3"
                style="@style/QuestionLabelStyle"
                android:layout_marginLeft="2dp"
                android:text="3" />

            <TextView
                android:id="@+id/txtResultQuestion4"
                style="@style/QuestionLabelStyle"
                android:layout_marginLeft="2dp"
                android:text="4" />

            <TextView
                android:id="@+id/txtResultQuestion5"
                style="@style/QuestionLabelStyle"
                android:layout_marginLeft="2dp"
                android:text="5" />

            <TextView
                android:id="@+id/txtResultQuestion6"
                style="@style/QuestionLabelStyle"
                android:layout_marginLeft="2dp"
                android:text="6" />

            <TextView
                android:id="@+id/txtResultQuestion7"
                style="@style/QuestionLabelStyle"
                android:layout_marginLeft="2dp"
                android:text="7" />

            <TextView
                android:id="@+id/txtResultQuestion8"
                style="@style/QuestionLabelStyle"
                android:layout_marginLeft="2dp"
                android:text="8" />

            <TextView
                android:id="@+id/txtResultQuestion9"
                style="@style/QuestionLabelStyle"
                android:layout_marginLeft="2dp"
                android:text="9" />

            <TextView
                android:id="@+id/txtResultQuestion10"
                style="@style/QuestionLabelStyle"
                android:layout_marginLeft="2dp"
                android:text="10" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtResultQuestion11"
                style="@style/QuestionLabelStyle"
                android:text="11" />

            <TextView
                android:id="@+id/txtResultQuestion12"
                style="@style/QuestionLabelStyle"
                android:layout_marginLeft="2dp"
                android:text="12" />

            <TextView
                android:id="@+id/txtResultQuestion13"
                style="@style/QuestionLabelStyle"
                android:layout_marginLeft="2dp"
                android:text="13" />

            <TextView
                android:id="@+id/txtResultQuestion14"
                style="@style/QuestionLabelStyle"
                android:layout_marginLeft="2dp"
                android:text="14" />

            <TextView
                android:id="@+id/txtResultQuestion15"
                style="@style/QuestionLabelStyle"
                android:layout_marginLeft="2dp"
                android:text="15" />

            <TextView
                android:id="@+id/txtResultQuestion16"
                style="@style/QuestionLabelStyle"
                android:layout_marginLeft="2dp"
                android:text="16" />

            <TextView
                android:id="@+id/txtResultQuestion17"
                style="@style/QuestionLabelStyle"
                android:layout_marginLeft="2dp"
                android:text="17" />

            <TextView
                android:id="@+id/txtResultQuestion18"
                style="@style/QuestionLabelStyle"
                android:layout_marginLeft="2dp"
                android:text="18" />

            <TextView
                android:id="@+id/txtResultQuestion19"
                style="@style/QuestionLabelStyle"
                android:layout_marginLeft="2dp"
                android:text="19" />

            <TextView
                android:id="@+id/txtResultQuestion20"
                style="@style/QuestionLabelStyle"
                android:layout_marginLeft="2dp"
                android:text="20" />
        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>